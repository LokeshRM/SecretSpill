<%- include('partials/header') %>

<div class="container-fluid">
  <div class="flex-custom">
    <div class="col-sm-6 col-md-7 intro-section">
      <div class="brand-wrapper">
        <h1>Spill Secret</h1>
      </div>
      <div class="intro-content-wrapper">
        <h1 class="intro-title">Welcome to website</h1>
        <p class="intro-text">
          Here you can share your secrets to the world anonymously Signup
          <i class="fas fa-arrow-circle-right" style="font-size: 16px"></i>
        </p>
      </div>
    </div>
    <div class="col-sm-6 col-md-5 form-section">
      <div class="login-wrapper">
        <h2 class="login-title">Sign up</h2>
        <form action="/register" method="post">
          <div class="form-group">
            <label for="text" class="sr-only">Name</label>
            <input
              type="text"
              name="name"
              id="text"
              class="form-control"
              placeholder="Name"
            />
          </div>
          <div class="form-group">
            <label for="email" class="sr-only">Email</label>
            <input
              type="email"
              name="username"
              id="email"
              class="form-control"
              placeholder="Email"
            />
          </div>
          <div class="form-group mb-3">
            <label for="password" class="sr-only">Password</label>
            <input
              type="password"
              name="password"
              id="password"
              class="form-control"
              placeholder="Password"
            />
          </div>
          <button type="submit" class="btn btn-dark">Sign up</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
